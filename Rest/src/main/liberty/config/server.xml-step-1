	<httpEndpoint host="*" httpPort="9080" id="defaultHttpEndpoint"/>
		
	<executor coreThreads="40" id="default" keepAlive="60s" maxThreads="50" name="LargeThreadPool" rejectedWorkPolicy="CALLER_RUNS" stealPolicy="LOCAL"/>

</server>